# Test Environment Configuration
# This file is used by docker-compose.test.yml for running tests in isolation

# Database Configuration (overridden by docker-compose for service name)
DB_HOST=db
DB_USERNAME=base_user
DB_PASSWORD=base_password
DB_NAME=base_db

# Server Configuration
SERVER_PORT=8080
WEBAPP_URI=http://localhost:3000

# Authentication (test values)
JWT_SECRET=test-jwt-secret-for-testing-only
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/google/callback
TURNSTILE_SECRET_KEY=test-turnstile-key

# Email Service (test values - won't actually send emails)
RESEND_API_KEY=re_test_fake_key
DEFAULT_EMAIL_SENDER_ADDRESS=test@example.com

# Payment Processing (test values)
STRIPE_SECRET_KEY=sk_test_fake_key
STRIPE_WEBHOOK_SECRET=whsec_test_fake_secret

# AI Services (test values)
OPENAI_API_KEY=sk-test-fake-openai-key
GOOGLE_AI_API_KEY=test-google-ai-key

# Kafka (overridden by docker-compose for service name)
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC=webhook-events
KAFKA_CONSUMER_GROUP=webhook-consumers
